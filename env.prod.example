# Production Environment Variables
# Скопируйте этот файл в .env.prod и заполните своими значениями

# Домен сайта (без https://)
DOMAIN=your-domain.com

# Email для Let's Encrypt уведомлений
EMAIL=your-email@example.com

# Django настройки
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=False

# База данных PostgreSQL
POSTGRES_DB=wedding_db
POSTGRES_USER=wedding_user
POSTGRES_PASSWORD=your-strong-database-password

# CORS настройки (автоматически формируются из DOMAIN)
# CORS_ALLOWED_ORIGINS будет: https://your-domain.com,https://www.your-domain.com

